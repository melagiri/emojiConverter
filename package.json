{
  "name": "emoji-converter",
  "displayName": "Emoji Converter",
  "description": "Convert between emojis, Unicode escape sequences, HTML entities, and Markdown shortcodes",
  "version": "3.0.0",
  "publisher": "melagiri",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melagiri/emoji-converter"
  },
  "engines": {
    "vscode": "^1.100.0",
    "node": "^16.0.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "emoji",
    "unicode",
    "html entities",
    "markdown",
    "converter",
    "formatter",
    "character",
    "text",
    "shortcode"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emoji-converter.quickFormatSelection",
        "title": "Convert Emoji Format..."
      },
      {
        "command": "emoji-converter.convertEmojiToUnicode",
        "title": "Convert Emojis to Unicode Escape Sequences"
      },
      {
        "command": "emoji-converter.convertEmojiToHtml",
        "title": "Convert Emojis to HTML Entities"
      },
      {
        "command": "emoji-converter.convertEmojiToMarkdown",
        "title": "Convert Emojis to Markdown Shortcodes"
      },
      {
        "command": "emoji-converter.convertToEmoji",
        "title": "Convert to Emojis (from any format)"
      },
      {
        "command": "emoji-converter.toggleEmojiUnicode",
        "title": "Toggle Between Emojis and Unicode"
      }
    ],
    "keybindings": [
      {
        "command": "emoji-converter.quickFormatSelection",
        "key": "ctrl+alt+q",
        "mac": "cmd+alt+q",
        "when": "editorTextFocus"
      },
      {
        "command": "emoji-converter.convertEmojiToUnicode",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorTextFocus"
      },
      {
        "command": "emoji-converter.convertEmojiToHtml",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "emoji-converter.convertEmojiToMarkdown",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "editorTextFocus"
      },
      {
        "command": "emoji-converter.convertToEmoji",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorTextFocus"
      },
      {
        "command": "emoji-converter.toggleEmojiUnicode",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "emoji-converter.formatSubMenu",
          "group": "z_commands"
        }
      ],
      "emoji-converter.formatSubMenu": [
        {
          "command": "emoji-converter.quickFormatSelection",
          "group": "1_conversion"
        },
        {
          "command": "emoji-converter.convertEmojiToUnicode",
          "group": "2_conversion"
        },
        {
          "command": "emoji-converter.convertEmojiToHtml",
          "group": "2_conversion"
        },
        {
          "command": "emoji-converter.convertEmojiToMarkdown",
          "group": "2_conversion"
        },
        {
          "command": "emoji-converter.convertToEmoji",
          "group": "3_conversion"
        },
        {
          "command": "emoji-converter.toggleEmojiUnicode",
          "group": "3_conversion"
        }
      ]
    },
    "submenus": [
      {
        "id": "emoji-converter.formatSubMenu",
        "label": "Emoji Converter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/extension.test.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "glob": "^11.0.2",
    "typescript": "^5.8.3"
  }
}
